@model Lazyfitness.Models.serverShowInfo
@using Lazyfitness.Models
@{
    Layout = "~/Views/Shared/_backStageMainStyle.cshtml";
    ViewBag.Title = "查询结果";
}
@{ 
    serverShowInfo[] allInfo = ViewBag.allInfo as serverShowInfo[];
    int sumPage = Convert.ToInt32(ViewBag.sumPage);
    int nowPage = Convert.ToInt32(ViewBag.nowPage);
}
<!--/sidebar-->
<div class="main-wrap">
    <div class="crumb-wrap">
        <div class="crumb-list">
            <i class="icon-font">🔈</i><span>欢迎使用小懒人共享健身后台管理系统</span>
        </div>
    </div>
    <div class="result-wrap">
        <div class="result-title">
            <h1>可选操作</h1>
        </div>
        <div class="result-content">
            <div class="short-wrap">
                @Html.ActionLink("返回上一级", "displaySearch", "displayManagement")
            </div>
        </div>
    </div>
</div>
<div class="result-content">
    <table class="result-tab">
        <tr>
            <th>ID</th>
            <th>分区名称</th>
            <th>标题</th>
            <th>图片</th>
            <th>类型</th>
            <th>状态</th>
            <th colspan="2">可选操作</th>
        </tr>
        @if (allInfo != null)
        {
            foreach (var item in allInfo)
            {
                <tr>
                    <td>@item.id</td>
                    @if (item.areaId == 0)
                    {
                        <td>首页</td>
                    }
                    @if (item.areaId == 1)
                    {
                        <td>资源</td>
                    }
                    <td>@item.title</td>

                    @if (item.flag == 0)
                    {
                        <td><img src="@item.pictureAdr" /></td>
                        <td>轮播图</td>
                    }
                    @if (item.flag == 1)
                    {
                        <td>公告无图片</td>
                        <td>公告</td>
                    }
                    @if (item.Infostatus == 0)
                    {
                        <td>禁止</td>
                    }
                    @if (item.Infostatus == 1)
                    {
                        <td>启用</td>
                    }
                    <td>
                        <form method="post" action="~/backStage/displayManagement/displayUpdate">
                            <input type="text" name="id" id="id" value="@item.id" hidden="hidden" />
                            <input class="index-btn" type="submit" value="修改">
                        </form>
                    </td>
                    <td>
                        <form method="post" action="~/backStage/displayManagement/displayDelete">
                            <input type="text" name="id" id="id" value="@item.id" hidden="hidden" />
                            <input class="index-btn" type="submit" value="删除">
                        </form>
                    </td>
                </tr>
            }
        }
    </table>
    <div class="page-number">
        <ul>
            @{
                for (int i = 1; i <= sumPage; i++)
                {

                    <li style="float:left">
                        <form method="post" action="~/backStage/displayManagement/displaySearch">
                            <input  id="areaId" name="areaId" type="text" value=@ViewBag.pageAreaId hidden="hidden" />
                            <input  id="title" name="title" type="text" value=@ViewBag.pageTitle hidden="hidden" />
                            <input  id="flag" name="flag" type="text" value=@ViewBag.pageFlag hidden="hidden" />
                            <input  id="pageId" name="pageId" type="text" value=@i hidden="hidden" />
                            <input type="submit" class="btn-submit" value=@i />
                        </form>
                    </li>
                }
            }
            <li style="float:left;"><input class="text-summer" readonly="readonly" value="当前第 @nowPage 页, 共 @sumPage 页" /></li>
        </ul>
    </div>
</div>