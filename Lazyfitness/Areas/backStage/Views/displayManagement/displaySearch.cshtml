@model Lazyfitness.Models.serverShowInfo
@{
    Layout = "~/Views/Shared/_backStageMainStyle.cshtml";
    ViewBag.Title = "查找展示";
}
<!--/sidebar-->
<div class="main-wrap">
    <div class="crumb-wrap">
        <div class="crumb-list">
            <i class="icon-font">🔈</i><span>欢迎使用小懒人共享健身后台管理系统</span>
        </div>
    </div>
    <div class="result-wrap">
        <div class="result-title">
            <h1>可选操作</h1>
        </div>
        <div class="result-content">
            <div class="short-wrap">
                @Html.ActionLink("返回上一级", "Index", "displayManagement")
            </div>
        </div>
    </div>
</div>
<div class="result-content">
    <form action="~/backStage/displayManagement/displaySearch" method="post" autocomplete="off">
        <table class="insert-tab">
            <tr><th></th><td class="show-title">查询展示</td></tr>
            <tr>
                <th>
                    展示分区
                </th>
                <td>
                    <select name="areaId">
                        <option class="dropdown-list" value="0">首页</option>
                        <option class="dropdown-list" value="1">资源</option>
                    </select>
                </td>
            </tr>
            <tr>
                <th>
                    类型
                </th>
                <td>
                    <select name="flag">
                        <option class="dropdown-list" value="0">轮播图</option>
                        <option class="dropdown-list" value="1">公告</option>
                    </select>
                </td>
            </tr>
            <tr>
                <th>
                    标题
                </th>
                <td>
                    @Html.TextBoxFor(u => u.title, new { @type = "text", @class = "input-content", @id = "title", @name = "title" })
                    <div class="error-mes">@Html.ValidationMessageFor(u => u.title)</div>
                </td>
            </tr>
            <tr>
                <th></th>
                <td>
                    <input type="text" id="pageId" name="pageId" value=0 hidden="hidden" />
                    <input class="btn-submit show-border" type="submit" id="postData" name="postData" value="查询" />
                </td>
            </tr>
        </table>
    </form>
</div>