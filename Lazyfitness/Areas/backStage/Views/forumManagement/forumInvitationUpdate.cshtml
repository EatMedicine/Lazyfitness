@model Lazyfitness.Areas.DbTable.tables
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>小懒人后台管理</title>
    <link rel="stylesheet" type="text/css" href="~/Css/backStageBarLayout.css">
    <link rel="stylesheet" type="text/css" href="~/Css/backStageTableLayout.css" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</head>
<body>
    <div class="topbar-wrap white topbar-inner">
        <div class="topbar-inner clearfix">
            <div class="topbar-logo-wrap clearfix">
                <ul class="navbar-list clearfix">
                    <li>@Html.ActionLink("首页", "Index", "manager")</li>
                </ul>
            </div>
            <div class="top-info-wrap">
                <ul class="top-info-list clearfix">
                    @{
                        if (ViewBag.managerId == null)
                        {
                            <li>@Html.ActionLink("管理员登录", "login", "manager")</li>
                        }
                        else
                        {
                            <li>@ViewBag.managerId</li>
                            <li>@Html.ActionLink("退出", "loginOut", "manager")</li>
                        }
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container clearfix">
        <div class="sidebar-wrap">
            <div class="sidebar-title">
                <h1>菜单</h1>
            </div>
            <div class="sidebar-content">
                <ul class="sidebar-list">
                    <li>
                        <ul class="sub-menu">
                            <li>@Html.ActionLink("用户管理", "Index", "userManagement")</li>
                            <li>@Html.ActionLink("资源文章管理", "Index", "articleManagement")</li>
                            <li>@Html.ActionLink("论坛管理", "Index", "forumManagement")</li>
                            <li><a href=""><i class="icon-font"></i>问答专区管理</a></li>
                            <li><a href=""><i class="icon-font"></i>评论管理</a></li>
                            <li>@Html.ActionLink("充值管理", "Index", "payManagement")</li>
                            <li><a href=""><i class="icon-font"></i>统计报表管理</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
        <!--/sidebar-->
        <div class="main-wrap">
            <div class="crumb-wrap">
                <div class="crumb-list">
                    <i class="icon-font">🔈</i><span>欢迎使用小懒人共享健身后台管理系统</span>
                </div>
            </div>
            <div class="result-wrap">
                <div class="result-title">
                    <h1>可选操作</h1>
                </div>
                
                <div class="result-content">
                    <div class="short-wrap">
                        @Html.ActionLink("增加帖子", "forumInvitationAdd", "forumManagement")
                        @Html.ActionLink("删除帖子", "forumInvitationDelete", "forumManagement")
                        @Html.ActionLink("修改帖子信息", "forumInvitationSearch", "forumManagement")
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("input:radio[name = 'isPost'][value = '@ViewBag.isPost']").attr("checked", true);
        $("input:radio[name = 'isPay'][value = '@ViewBag.isPay']").attr("checked", true);
        $("input:radio[name = 'postStatus'][value = '@ViewBag.postStatus']").attr("checked", true);
    })
</script>

<h2>forumInvitationUpdate</h2>
<h2>论坛帖子修改</h2>
<form method="post" action="~/backStage/forumManagement/forumInvitationUpdate">
    <label>查询成功:</label> @ViewBag.IsSearchSuccess<br />
    <label>分区ID</label> @Html.TextBoxFor(u => u.areaId, new { @Value = @ViewBag.areaId }) @Html.ValidationMessageFor(x => x.areaId)<br />
    <label>帖子ID</label>@Html.TextBoxFor(u => u.postId, new { @Value = @ViewBag.postId }) @Html.ValidationMessageFor(x => x.postId)<br />
    <label>帖子标题</label>@Html.TextBoxFor(u => u.postTitle, new { @Value = @ViewBag.postTitle }) @Html.ValidationMessageFor(x => x.postTitle)<br />
    <label>用户ID</label>@Html.TextBoxFor(u => u.userId, new { @Value = @ViewBag.userId }) @Html.ValidationMessageFor(x => x.userId)<br />
    <label>是否置顶</label>
    <input type="radio" id="isPost" name="isPost" value="0" />否
    <input type="radio" id="isPost" name="isPost" value="1" />是
    <br />
    <label>是否付费</label>
    <input type="radio" id="isPay" name="isPay" value="0" />否
    <input type="radio" id="isPay" name="isPay" value="1" />是
    <br />
    <label>帖子状态</label>
    <input type="radio" id="postStatus" name="postStatus" value="0" />所有人可见
    <input type="radio" id="postStatus" name="postStatus" value="1" />好友可见
    <input type="radio" id="postStatus" name="postStatus" value="2" />仅自己可见
    <input type="radio" id="postStatus" name="postStatus" value="3" />隐藏
    <br />
    <label>帖子内容</label>@Html.TextBoxFor(u => u.postContent, new { @Value = @ViewBag.postContent }) @Html.ValidationMessageFor(x => x.postContent)<br />
    <input type="submit" id="postData" name="postData" value="修改" />
</form>

<br /><a href="~/backStage/forumManagement/Index">返回</a><br />