@model Lazyfitness.Models.postInfo
@{
    Layout = "~/Views/Shared/_backStageMainStyle.cshtml";
    ViewBag.title = "论坛帖子管理";
}


<link href="~/Css/Editor.css" rel="stylesheet" type="text/css" />
<script type="text/javascript" charset="utf-8" src="~/Content/utf8-net/ueditor.config.js"></script>
<script type="text/javascript" charset="utf-8" src="~/Content/utf8-net/ueditor.all.min.js"></script>
<script type="text/javascript" charset="utf-8" src="~/Content/utf8-net/lang/zh-cn/zh-cn.js"></script>

<script type="text/javascript">
    var editor = new baidu.editor.ui.Editor({

        initialFrameWidth: 680,
        initialFrameHeight: 300,
        elementPathEnabled: false,
        wordCount: false,
    });

    editor.render('postContent');
</script>

<!--/sidebar-->
<div class="main-wrap">
    <div class="crumb-wrap">
        <div class="crumb-list">
            <i class="icon-font">🔈</i><span>欢迎使用小懒人共享健身后台管理系统</span>
        </div>
    </div>
    <div class="result-wrap">
        <div class="result-title">
            <h1>可选操作</h1>
        </div>

        <div class="result-content">
            <div class="short-wrap">
                @Html.ActionLink("增加帖子", "forumInvitationAdd", "forumManagement")
                @Html.ActionLink("删除帖子", "forumInvitationDelete", "forumManagement")
                @Html.ActionLink("修改帖子信息", "forumInvitationSearch", "forumManagement")
            </div>
        </div>
    </div>
    <div class="result-content">
        <form method="post" action="/backStage/forumManagement/changeForum">
            @if (ViewBag.postInfo != null && ViewBag.postArea != null && ViewBag.userInfo != null)
            {
                <input type="hidden" name="postId" id="postId" value=@ViewBag.postInfo.postId />
                <table class="insert-tab">
                    <tr></tr>
                    <tr>
                        <th>分区名</th>
                        <td>
                            @{
                                <select id="areaId" name="areaId">
                                    @foreach (var item in @ViewBag.postArea)
                                    {
                                        <option class="dropdown-list" id="areaId" value=@item.areaId>@item.areaName</option>
                                    }
                                </select>
                            }
                        </td>
                    </tr>
                    <tr>
                        <th>帖子名称</th>
                        <td>
                            @Html.TextBoxFor(u => u.postTitle, new { @Value = @ViewBag.postInfo.postTitle, @class = "input-content" })
                            <div class="error-mes">
                                @Html.ValidationMessageFor(u => u.postTitle)
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <th>发布者</th>
                        <td>
                            @ViewBag.userInfo.userName
                        </td>
                    </tr>
                    <tr>
                        <th>发布时间</th>
                        <td>@ViewBag.postInfo.postTime</td>
                    </tr>
                    <tr>
                        <th>访问量</th>
                        <td>
                            @Html.TextBoxFor(u => u.pageView, new { @Value = @ViewBag.postInfo.pageView, @class = "input-content" })
                            <div class="error-mes">
                                @Html.ValidationMessageFor(u => u.pageView)
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <th>是否置顶</th>
                        <td>
                            <input class="radio-dis" type="radio" id="isPost" name="isPost" value="1" />是
                            <input class="radio-dis" type="radio" id="isPost" name="isPost" value="0" />否
                        </td>
                    </tr>
                    <tr>
                        <th>付费金额</th>
                        <td>
                            <input class="input-content" type="number" name="amount" id="amount" value=@ViewBag.postInfo.amount />
                        </td>
                    </tr>
                    <tr>
                        <th>帖子状态</th>
                        <td>
                            <input class="radio-dis" type="radio" id="postStatus" name="postStatus" value="1" />不可回复
                            <input class="radio-dis" type="radio" id="postStatus" name="postStatus" value="2" />可回复
                            <input class="radio-dis" type="radio" id="postStatus" name="postStatus" value="0" />隐藏
                        </td>
                    </tr>
                    <tr>
                        <th>帖子内容</th>
                        <td style="padding:10px">
                            <input type="hidden" id="getContent" value=@ViewBag.postInfo.postContent />
                            <textarea id="postContent" name="postContent"></textarea>
                            <script>
                                $(document).ready(function () {
                                    var getContent = $("#getContent").val();
                                    $("#postContent").val(getContent);
                                })
                            </script>
                        </td>>
                    </tr>
                    <tr>
                        <th></th>
                        <td><input type="submit" class="input-btn show-border" value="修改" /></td>
                    </tr>
                </table>
            }
        </form>
    </div>
</div>