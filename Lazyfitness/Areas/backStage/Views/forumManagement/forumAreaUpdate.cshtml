@model Lazyfitness.Models.postArea
@{
    Layout = "~/Views/Shared/_backStageMainStyle.cshtml";
    ViewBag.title = "论坛分区管理";
}
<!--/sidebar-->
<div class="main-wrap">
    <div class="crumb-wrap">
        <div class="crumb-list">
            <i class="icon-font">🔈</i><span>欢迎使用小懒人共享健身后台管理系统</span>
        </div>
    </div>

    <div class="result-wrap">
        <div class="result-title">
            <h1>可选操作</h1>
        </div>
        <div class="result-content">
            <div class="short-wrap">
                @Html.ActionLink("增加分区", "forumAreaAdd", "forumManagement")
                @Html.ActionLink("删除分区", "forumAreaDelete", "forumManagement")
                @Html.ActionLink("修改分区信息", "forumAreaSearch", "forumManagement")
            </div>
        </div>
    </div>
    <div class="result-content">
        <form action="~/backStage/forumManagement/forumAreaUpdate" method="post">
            <table class="insert-tab">
                <tbody>
                    <tr><th></th><td class="show-title">修改分区信息</td></tr>
                    <tr>
                        <th>
                            查询成功
                        </th>
                        <td>
                            <h2>@ViewBag.IsSearchSuccess</h2>
                        </td>
                    </tr>
                    <tr>
                        @Html.TextBoxFor(u => u.areaId, new { @Value = @ViewBag.postArea.areaId, @type = "hidden", @class = "input-content", @id = "areaId", @name = "areaId", @readonly = "readonly" })
                    </tr>
                    <tr>
                        <th>
                            分区名称
                        </th>
                        <td>
                            @Html.TextBoxFor(u => u.areaName, new { @Value = @ViewBag.postArea.areaName, @type = "text", @class = "input-content", @id = "areaName", @name = "areaName" })
                            <div class="error-mes">@Html.ValidationMessageFor(x => x.areaName)</div>
                        </td>
                    </tr>
                    <tr>
                        <th>
                            分区描述
                        </th>
                        <td>
                            @Html.TextBoxFor(u => u.areaBrief, new { @Value = @ViewBag.postArea.areaBrief, @type = "text", @class = "input-content", @id = "areaBrief", @name = "areaBrief" })
                            <div class="error-mes">@Html.ValidationMessageFor(x => x.areaBrief)</div>
                        </td>
                    </tr>
                    <tr>
                        <th></th>
                        <td>
                            <input class="btn-submit show-border" type="submit" id="postData" name="postData" value="修改" />
                        </td>
                    </tr>
                </tbody>
            </table>
        </form>
    </div>
</div>