@model Lazyfitness.Areas.DbTable.tables
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>小懒人后台管理</title>
    <link rel="stylesheet" type="text/css" href="~/Css/backStageBarLayout.css">
    <link rel="stylesheet" type="text/css" href="~/Css/backStageTableLayout.css" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</head>
<body>
    <div class="topbar-wrap white topbar-inner">
        <div class="topbar-inner clearfix">
            <div class="topbar-logo-wrap clearfix">
                <ul class="navbar-list clearfix">
                    <li>@Html.ActionLink("首页", "Index", "manager")</li>
                </ul>
            </div>
            <div class="top-info-wrap">
                <ul class="top-info-list clearfix">
                    @{
                        if (ViewBag.managerId == null)
                        {
                            <li>@Html.ActionLink("管理员登录", "login", "manager")</li>
                        }
                        else
                        {
                            <li>@ViewBag.managerId</li>
                            <li>@Html.ActionLink("退出", "loginOut", "manager")</li>
                        }
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container clearfix">
        <div class="sidebar-wrap">
            <div class="sidebar-title">
                <h1>菜单</h1>
            </div>
            <div class="sidebar-content">
                <ul class="sidebar-list">
                    <li>
                        <ul class="sub-menu">
                            <li>@Html.ActionLink("用户管理", "Index", "userManagement")</li>
                            <li>@Html.ActionLink("资源文章管理", "Index", "articleManagement")</li>
                            <li>@Html.ActionLink("论坛管理", "Index", "forumManagement")</li>
                            <li><a href=""><i class="icon-font"></i>问答专区管理</a></li>
                            <li><a href=""><i class="icon-font"></i>评论管理</a></li>
                            <li>@Html.ActionLink("充值管理", "Index", "payManagement")</li>
                            <li><a href=""><i class="icon-font"></i>统计报表管理</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
        <!--/sidebar-->
        <div class="main-wrap">
            <div class="crumb-wrap">
                <div class="crumb-list">
                    <i class="icon-font">🔈</i><span>欢迎使用小懒人共享健身后台管理系统</span>
                </div>
            </div>

                <div class="result-wrap">
                    <div class="result-title">
                        <h1>可选操作</h1>
                    </div>
                    <div class="result-content">
                        <div class="short-wrap">
                            @Html.ActionLink("增加分区", "forumAreaAdd", "forumManagement")
                            @Html.ActionLink("删除分区", "forumAreaDelete", "forumManagement")
                            @Html.ActionLink("修改分区信息", "forumAreaSearch", "forumManagement")
                        </div>
                    </div>
                </div>
                <div class="result-content">
                    <form action="~/backStage/forumManagement/forumAreaUpdate" method="post">
                        <table class="insert-tab">
                            <tbody>
                                <tr><th></th><td class="show-title">修改分区信息</td></tr>
                                <tr>
                                    <th>
                                        查询成功
                                    </th>
                                    <td>
                                        <h2>@ViewBag.IsSearchSuccess</h2>
                                    </td>
                                </tr>
                                <tr>
                                    <th>
                                        分区ID
                                    </th>
                                    <td>
                                        @Html.TextBoxFor(u => u.postArea.areaId, new { @Value = @ViewBag.areaId, @type = "text", @class = "input-content", @id = "areaId", @name = "areaId" })
                                        <div class="error-mes">@Html.ValidationMessageFor(x => x.postArea.areaId)</div>
                                    </td>
                                </tr>
                                <tr>
                                    <th>
                                        分区名称
                                    </th>
                                    <td>
                                        @Html.TextBoxFor(u => u.postArea.areaName, new { @Value = @ViewBag.areaName, @type = "text", @class = "input-content", @id = "areaName", @name = "areaName" })
                                        <div class="error-mes">@Html.ValidationMessageFor(x => x.postArea.areaName)</div>
                                    </td>
                                </tr>
                                <tr>
                                    <th>
                                        分区描述
                                    </th>
                                    <td>
                                        @Html.TextBoxFor(u => u.postArea.areaBrief, new { @Value = @ViewBag.areaBrief, @type = "text", @class = "input-content" ,@id = "areaBrief", @name = "areaBrief" })
                                        <div class="error-mes">@Html.ValidationMessageFor(x => x.postArea.areaBrief)</div>
                                    </td>
                                </tr>
                                <tr>
                                    <th></th>
                                    <td>
                                        <input class="btn-submit show-border" type="submit" id="postData" name="postData" value="修改" />
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </form>
                </div>
        </div>
    </div>
</body>
</html>