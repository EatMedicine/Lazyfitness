@model Lazyfitness.Models.resourceArea
@*@{
    ViewBag.Title = "changeArea";
}*@

<h2>changeArea</h2>


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

@{
    if (ViewBag.info != null)
    {
        <form method="post" action="~/backStage/articleManagement/changeArea">
            <input type="text" name="areaId" id="areaId" hidden="hidden" value="@ViewBag.info.areaId"/>
            <label>分区名：</label>   @Html.TextBoxFor(t => t.areaName, new {@value=ViewBag.info.areaName }) @Html.ValidationMessageFor(t => t.areaName)
            <label>分区简介：</label><p>@ViewBag.info.areaBrief</p>
            <label>请将更改后的内容写到这里:</label> @Html.TextAreaFor(t => t.areaBrief, new {@value=ViewBag.info.areaBrief}) @Html.ValidationMessageFor(t => t.areaBrief)
            <input type="submit" value="更改"/>
        </form>		

    }
    else
    {
        <h2>没有此人</h2>
    }
}
