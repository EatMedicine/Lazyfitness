@model Lazyfitness.Models.resourceArea
@using Lazyfitness.Models
@{
    Layout = "~/Views/Shared/_backStageMainStyle.cshtml";
    ViewBag.Title = "删除分区";
}
@{
    resourceArea[] allInfo = ViewBag.allInfo as resourceArea[];
}
<script src="~/Areas/jQuery/userManagement.js"></script>

<!--/sidebar-->
<div class="main-wrap">
    <div class="crumb-wrap">
        <div class="crumb-list">
            <i class="icon-font">🔈</i><span>欢迎使用小懒人共享健身后台管理系统</span>
        </div>
    </div>
    <div class="result-wrap">
        <div class="result-title">
            <h1>可选操作</h1>
        </div>
        <div class="result-content">
            <div class="short-wrap">
                @Html.ActionLink("增加分区", "addArea", "articleManagement")
                @Html.ActionLink("删除分区", "deleteArea", "articleManagement")
                @Html.ActionLink("查询分区", "findArea", "articleManagement")
            </div>
        </div>
    </div>
    <div class="result-content">
        <form method="post" action="~/backStage/articleManagement/deleteArea">
            <table class="insert-tab">
                <tr><th></th><td class="show-title">删除分区</td></tr>
                <tr>
                    <th>
                        要删除的分区名
                    </th>
                    <td>
                        @{
                            <select name="areaId">
                                @if (allInfo != null)
                                {
                                    foreach (var item in allInfo)
                                    {
                                        <option class="dropdown-list" value=@item.areaId id="areaId" name="areaId">@item.areaName</option>
                                    }
                                }
                            </select>
                        }
                    </td>
                </tr>
                <tr>
                    <th></th>
                    <td>
                        <input class="btn-submit show-border" type="submit" id="postData" name="postData" value="删除" />
                    </td>
                </tr>
            </table>
        </form>
    </div>
</div>
    </div>
</body>
</html>

