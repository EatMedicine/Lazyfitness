@model Lazyfitness.Models.quesArea
@{
    Layout = "~/Views/Shared/_backStageMainStyle.cshtml";
    ViewBag.title = "问答分区管理";
}
<!--/sidebar-->
<div class="main-wrap">
    <div class="crumb-wrap">
        <div class="crumb-list">
            <i class="icon-font">🔈</i><span>欢迎使用小懒人共享健身后台管理系统</span>
        </div>
    </div>

    <div class="result-wrap">
        <div class="result-title">
            <h1>可选操作</h1>
        </div>
        <div class="result-content">
            <div class="short-wrap">
                @Html.ActionLink("增加问答分区", "quesAnswAreaAdd", "quesAnswManagement")
                @Html.ActionLink("删除问答分区", "quesAnswAreaDelete", "quesAnswManagement")
                @Html.ActionLink("修改问答分区信息", "quesAnswAreaSearch", "quesAnswManagement")
            </div>
        </div>
    </div>
</div>
<div class="result-content">
    <form action="~/backStage/quesAnswManagement/quesAnswAreaAdd" method="post">
        <table class="insert-tab">
            <tr><th></th><td class="show-title">增加问答分区</td></tr>
            <tr>
                <th>
                    分区ID
                </th>
                <td>
                    @Html.TextBoxFor(u => u.areaId, new { @type = "text", @class = "input-content" })
                    <div class="error-mes">@Html.ValidationMessageFor(x => x.areaId)</div>
                </td>
            </tr>
            <tr>
                <th>
                    分区名称
                </th>
                <td>
                    @Html.TextBoxFor(u => u.areaName, new { @type = "text", @class = "input-content" })
                    <div class="error-mes">@Html.ValidationMessageFor(x => x.areaName)</div>
                </td>
            </tr>
            <tr>
                <th>
                    分区描述
                </th>
                <td>
                    @Html.TextBoxFor(u => u.areaBrief, new { @type = "text", @class = "input-content" })
                    <div class="error-mes">@Html.ValidationMessageFor(x => x.areaBrief)</div>
                </td>
            </tr>
            <tr>
                <th></th>
                <td>
                    <input class="btn-submit show-border" type="submit" id="postData" name="postData" value="增加" />
                </td>
            </tr>
        </table>
    </form>
</div>
        </div>
</body>
</html>

