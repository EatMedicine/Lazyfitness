<div class="login-input">
    <form action="~/account/userManagement/registerInfo" method="post" autocomplete="off">
        <div class="login-input-content">
            <p>填写信息</p>
            <div class="input-item">
                <div class="input-text-border">
                    @Html.TextBoxFor(u => u.userAge, new { @class = "input-text", @placeholder = "       年龄" })
                </div>
                <div class="message-style">
                    @Html.ValidationMessageFor(x => x.userAge)
                </div>
            </div>
            <div class="input-item">
                <div class="input-text-border">
                    @Html.TextBoxFor(u => u.userTel, new { @type = "password", @class = "input-text", @placeholder = "     电话号码" })
                </div>
                <div class="message-style">
                    @Html.ValidationMessageFor(x => x.userTel)
                </div>
            </div>
            <div class="radio-pos">
                <ul class="li-fl">
                    <li>
                        <div class="radiobtn-content">
                            <div class="radiobtn-content-btn" id="radio1">
                                <input class="radioclass" type="radio" name="userSex" value="0" checked="checked" />
                            </div>
                            <div class="radiobtn-content-text">
                                男
                            </div>
                        </div>
                    </li>
                    <li>
                        <div class="radiobtn-content">
                            <div class="radiobtn-content-btn" id="radio2">
                                <input class="radioclass" type="radio" name="userSex" value="1" />
                            </div>
                            <div class="radiobtn-content-text">
                                女
                            </div>
                        </div>
                    </li>
                    <li>
                        <div class="radiobtn-content">
                            <div class="radiobtn-content-btn" id="radio3">
                                <input class="radioclass" type="radio" name="userSex" value="2" />
                            </div>
                            <div class="radiobtn-content-text">
                                保密
                            </div>
                        </div>
                    </li>
                </ul>
            </div>



            <input type="submit" id="postData" name="postData" class="input-btn login-loginbtn-pos" />
        </div>
    </form>
</div>