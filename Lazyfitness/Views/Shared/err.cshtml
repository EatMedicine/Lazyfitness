
@{
    Layout = null;
}

<!DOCTYPE html>
@*本页变量：
    ViewBag.IsRefresh:是否要自动跳转 (bool)
    ViewBag.OtherHtml:指向一个要跳转的网页(url)
    ViewBag.ErrorMsg:错误消息(string)
    *@

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    @if (ViewBag.IsRefresh == true)
    {
        <meta http-equiv="refresh" content="5,@ViewBag.OtherHtml" />
    }

    <title>出错了！~</title>
    <style>
        .error-pic {
            position: relative;
            width: 500px;
            height: 500px;
            margin: 0 auto;
        }

        .error-text {
            position: relative;
            width: 500px;
            height: 50px;
            margin: 0 auto;
        }

        .body-content {
            width: 100%;
            height: 100%;
            position: relative;
            text-align: center;
            font-size: 30px;
            font-family: 'Microsoft YaHei';
        }
    </style>
</head>
<body>
    <div class="body-content">
        <div class="error-pic">
            <img src="~/Resource/picture/ERROR.png" width="500px" height="500px" />
        </div>
        <div class="error-text">
            <p >@ViewBag.ErrorMsg</p>
            <p>5秒后自动跳转</p>
        </div>
    </div>

</body>
</html>
