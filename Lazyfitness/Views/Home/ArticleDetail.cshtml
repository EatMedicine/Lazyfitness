
@{
    ViewData["IsSearch"] = false;
    ViewData["IsHeadPic"] = true;
    ViewBag.IsDefaultContent = true;
    ViewBag.Title = "文章帖子";
    Layout = "~/Views/Shared/_MainStyle.cshtml";
}
@*
    本页需要用到的变量：
    ViewBag.ArticleInfo

*@
@using Lazyfitness.Models;
<link href="~/Css/ArticleDetail.css" rel="stylesheet" type="text/css" />
@{ 
    resourceInfo ArticleInfo = ViewBag.ArticleInfo as resourceInfo;
    userInfo UserInfo = ViewBag.UserInfo as userInfo;
}
<div class="main">
    <div class="left-box">
        <div class="name-head">
            <div class="head-pic">
                <img src="~/Resource/picture/DefaultHeadPic.jpg" style="width:40px" />
            </div>
            <div class="name">
                @UserInfo.userName
            </div>
        </div>
        <div class="left-box-info">
            <ul>
                <li>年龄：@UserInfo.userAge </li>
                @{

                    string sex = "";
                    if (UserInfo.userSex == null)
                    {
                        sex = "保密";
                    }
                    else
                    {
                        switch ((int)UserInfo.userSex)
                        {
                            case 0: sex = "男"; break;
                            case 1: sex = "女"; break;
                            default: sex = "保密"; break;
                        }
                    }

                }
                <li>性别：@sex</li>
    
                </ul>
    
            </div>
    
            <div class="left-box-intro">
            <p>@UserInfo.userIntroduce</p>
        </div>
    </div>
    <div class="main-detail">
        <div class="title-info">
            <div class="title">
                <p>@ArticleInfo.resourceName</p>
            </div>
            <div class="info">
                <span class="detail-meta">@ArticleInfo.resourceTime</span>
                <span class="detail-meta fr">阅读量：@ArticleInfo.pageView</span>
            </div>
        </div>
        <div class="detail">
            @Html.Raw(ArticleInfo.resourceContent)
        </div>
    </div>
</div>